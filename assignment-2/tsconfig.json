{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "lib": [
    "es2015"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
